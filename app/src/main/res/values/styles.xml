<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CircleView">
        <attr name="CircleViewRadius" format="dimension" />
        <attr name="CircleViewMarginCirclePoint" format="dimension" />
        <attr name="CircleViewStartColor" format="color" />
        <attr name="CircleViewEndColor" format="color" />
        <attr name="CircleViewRadiusHideOrientation">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>
    </declare-styleable>

</resources>
